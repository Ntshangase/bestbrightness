@page
@model bestbrightness.Pages.Products.TestingModel
@{
    ViewData["Title"] = "Product List";
}

<br>
<h2>@ViewData["Title"]</h2>

<div class="product-grid">
    @foreach (var product in Model.listProducts)
    {
        <div class="product-card">
            <img src="/image@(product.id).jpg" alt="@product.item">
            <h3>@product.item</h3>
            <p>Category: @product.category</p>
            <p>Price: R @product.price</p>
            <p>Review: @product.review</p>
            <p>Created At: @product.created_at</p>
            <button type="submit" name="addItemToCart" value="@product.id">Add to Cart</button>


        </div>
    }
</div>

<div id="cart-counter">You have @Model.CartCounter items on your Cart</div>

<style>
    /* Style for the "Add to Cart" button */
    button[name="addItemToCart"] {
        background-color: #007bff; /* Background color */
        color: #fff; /* Text color */
        border: none; /* Remove the border */
        border-radius: 5px; /* Rounded corners */
        padding: 10px 20px; /* Padding around the text */
        cursor: pointer; /* Cursor style on hover */
    }

        /* Style for the button on hover */
        button[name="addItemToCart"]:hover {
            background-color: #0056b3; /* Darker background color on hover */
        }

    /* Style for the product grid */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Responsive grid */
        gap: 20px;
        justify-items: center; /* Center items horizontally */
    }

    /* Style for each product card */
    .product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
    }

        .product-card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

        /* Style for the "Add to Cart" button */
        .product-card button[name="addItemToCart"] {
            background-color: #007bff; /* Background color */
            color: #fff; /* Text color */
            border: none; /* Remove the border */
            border-radius: 5px; /* Rounded corners */
            padding: 10px 20px; /* Padding around the text */
            cursor: pointer; /* Cursor style on hover */
        }

            /* Style for the button on hover */
            .product-card button[name="addItemToCart"]:hover {
                background-color: #0056b3; /* Darker background color on hover */
            }
</style>
