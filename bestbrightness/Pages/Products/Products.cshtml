@page
@model bestbrightness.Pages.Products.ProductsModel
@{
    // allowed .cs code
}

<br>
<h2>List of available products</h2>
<a class='btn btn-primary btn-sm' href='/Products/Products'>Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Item</th>
            <th>Category</th>
            <th>Price</th>
            <th>Review1</th>
            <th>Created_At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listProducts)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.item</td>
                <td>@item.category</td>
                <td>@item.price</td>
                <td>@item.review</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="Products/Edit?id=">Edit</a>
                    <a class="btn btn-primary btn-sm" href="Products/Delete?id=">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
